{
  "name": "payroll-app",
  "version": "1.1.9",
  "type": "module",
  "description": "software for managing attendances, expenses, advances, salaries, and workers",
  "main": "electron/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "dev": "concurrently \"cd frontend && npm run dev\" \"cd backend && npm run start:dev\" \"NODE_ENV=development electron .\"",
    "build": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:electron": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "ci": "biome ci .",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "flavio-denis",
  "license": "ISC",
  "engines": {
    "node": "22.x",
    "npm": ">=10.x"
  },
  "devDependencies": {
    "@types/react-datepicker": "^6.2.0",
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "build": {
    "appId": "com.payroll.app",
    "productName": "Payroll App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/dist/**/*",
      "backend/prisma/**/*",
      "backend/node_modules/**/*",
      "backend/package.json",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "backend/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "denisds73",
      "repo": "payroll-app"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.business"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "biome": "^0.3.3",
    "clsx": "^2.1.1",
    "electron-updater": "^6.8.3",
    "latest": "^0.2.0",
    "lucide-react": "^0.548.0",
    "react-datepicker": "^9.1.0",
    "react-icons": "^5.5.0"
  }
}
